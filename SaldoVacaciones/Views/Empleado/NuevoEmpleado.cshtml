@model SaldoVacaciones.Models.Empleado;

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo Empleado</h2>
        <form asp-controller="Empleado" asp-action="NuevoEmpleado" method="post">
            <!-- Campo para el ID del Puesto -->
            <div class="mb-3">
                <label>ID del Puesto</label>
                <input class="form-control" asp-for="IdPuesto" type="number" />
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>

            <!-- Campo para el Documento de Identidad -->
            <div class="mb-3">
                <label>Documento de Identidad</label>
                <input class="form-control" asp-for="ValorDocumentoIdentidad" type="text" />
                <span asp-validation-for="ValorDocumentoIdentidad" class="text-danger"></span>
            </div>

            <!-- Campo para el Nombre Completo -->
            <div class="mb-3">
                <label>Nombre Completo</label>
                <input class="form-control" asp-for="Nombre" type="text" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Campo para la Fecha de Contratación -->
            <div class="mb-3">
                <label>Fecha Contrato</label>
                <input class="form-control" asp-for="FechaContratacion" type="date" />
                <span asp-validation-for="FechaContratacion" class="text-danger"></span>
            </div>

            <!-- Campo para el Saldo de Vacaciones -->
            <div class="mb-3">
                <label>Saldo Vacaciones</label>
                <input class="form-control" asp-for="SaldoVacaciones" type="number" />
                <span asp-validation-for="SaldoVacaciones" class="text-danger"></span>
            </div>

            <!-- Campo para el Estado Activo -->
            <div class="mb-3">
                <input class="form-check-input" asp-for="EsActivo" type="checkbox" id="chkActivo" />
                <label class="form-check-label" for="chkActivo">Activo</label>
                <span asp-validation-for="EsActivo" class="text-danger"></span>
            </div>

            <!-- Botones para guardar o volver -->
            <div class="mb-3">
                <button class="btn-primary" type="submit">Guardar</button>
                <a asp-controller="Empleado" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>
